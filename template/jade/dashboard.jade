extends base

block vars
  - var title = 'Dashboard'
  - var css   = 'public/css/dashboard.css'

  script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js")

block body
  div.container.header-container 
    div.row
      div.medium-3.small-1.columns.logo-block
        span.plus +
        h1.home.hide-for-small-only Status
      div.medium-9.small-11.columns.nav-block
        nav#nav
          a(href="#" class="navs") DASHBOARD
          a(href="#" class="navs") PATIENTS
          a(href="#" class="navs") MESSAGES
          a(href="/logout" class="navs logout") SIGNOUT
  div.container.welcome-container
    div.row
      div.medium-9.columns
        img(src="public/images/profiles/dr-grey.jpg" class="profile-picture")
        div.greeting
          p.welcome WELCOME BACK, DR #[span.doc MERIDETH GREY]
          p.outlook The outlook for today looks #[span.busy busy].
  //- div.container.time-container
  //-   div.row
  //-     div.medium-8.columns
  //-       div.time
  //-         p#current-time
  //-       div.date
  //-         p#current-date
  div.container
    div.row
      div.medium-8.columns.patient-block
        div.patient-header
          h2.patient PATIENTS
          button(type="button" class="button") add patient
        div.patient-lists
          div.patient-item
            h3.name Kobe Bryant
      div.medium-3.columns
        div.summary-flex
          div.summary-block
            h4.summary-label MEETINGS
            canvas(id="meet-chart" class="donut")
          div.summary-block
            h4.summary-label APPS
            canvas(id="apps-chart" class="donut")
          div.summary-block
            h4.summary-label LABS
            canvas(id="labs-chart" class="donut")
  script(src="public/js/all.js")
  script(src="public/js/chart.js")