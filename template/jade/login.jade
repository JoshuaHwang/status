extends base

block vars
  - var title = 'Login'
  - var css   = 'public/css/login.css'

block body
  h1 Login here!
  form(class="form" method="POST")
    input(type="text" name="medId" placeholder="Medical ID" require=true)
    input(type="email" name="email" placeholder="Email" require=true)
    input(type="password" name="password" placeholder="Password" require=true)
    input(type="submit")

    
